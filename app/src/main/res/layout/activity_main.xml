<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/stundentId"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="תעודת זהות"
        android:inputType="numberPassword"
        android:text="ID"
        app:layout_constraintStart_toEndOf="@+id/studentName"
        app:layout_constraintTop_toBottomOf="@+id/autheniticateButton" />

    <Button
        android:id="@+id/autheniticateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginBottom="412dp"
        android:onClick="authenticateButtonMethod"
        android:text="אמת פרטים"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/studentName"
        android:layout_width="145dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="שם הסטודנט"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autheniticateButton" />

</androidx.constraintlayout.widget.ConstraintLayout>